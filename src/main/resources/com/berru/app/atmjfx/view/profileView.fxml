<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.berru.app.atmjfx.controller.ProfileController"
      style="-fx-padding: 20; -fx-background-color: #fdfefe; -fx-border-color: #bdc3c7; -fx-border-radius: 8;">

    <Label text="ðŸ‘¤ User Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="roleLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>

    <Button text="Close" onAction="#closeProfile"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8;" />
</VBox>
